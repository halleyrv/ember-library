
<!-- app/templates/admin/invitations.hbs -->

<h1>Contacts</h1>

<table class="table table-bordered table-striped">
    <thead>
      <tr>
          <th>E-mail</th>
          <th>Mensaje</th>
          <th>Eliminar</th>
      </tr>
    </thead>
    <tbody>
    {{#each model as |contact|}}
        <tr>
            <th>{{contact.email}}</th>
            <td>{{contact.message}}</td>
            <td> <button class="btn btn-danger btn-xs" {{action 'deleteContact' contact}} > Eliminar </button>    </td>
        </tr>
    {{/each}}
    


    </tbody>
</table>